<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:MusicPlayer.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="MusicPlayer.Views.HomeBottomView"
             x:DataType="vm:HomeBottomViewModel">
  <Panel>
    <Border Background="Transparent">
      <Grid RowDefinitions="*, 5*">
        <Border Grid.Row="0" Classes="outline">
          <TextBlock Classes="heading" Text="Playlists" />
        </Border>
        <Panel Grid.Row="1">
          <ItemsRepeater ItemsSource="{Binding PlaylistTableau}" HorizontalAlignment="Center">
            <ItemsRepeater.Layout>
              <UniformGridLayout ItemsStretch="Fill" Orientation="Horizontal" MaximumRowsOrColumns="{Binding PlaylistTableau.Count}"/>
            </ItemsRepeater.Layout>
            <ItemsRepeater.ItemTemplate>
              <DataTemplate>
                <Border Classes="outline">
                    <StackPanel Margin="5" Orientation="Horizontal">
                      <Viewbox x:Name="PlaylistImg" Margin="5">
                        <Image Source="{Binding PlaylistImage}" />
                      </Viewbox>
                      <Grid RowDefinitions="*, 5*">
                        <TextBlock Grid.Row="0" FontSize="16" x:Name="PlaylistTitle" Text="{Binding Title}" />
                        <TextBlock Width="{Binding #PlaylistImg.Bounds.Width}" TextWrapping="Wrap" Grid.Row="1" Text="{Binding Description}" />
                      </Grid>
                    </StackPanel>
                </Border>
              </DataTemplate>
            </ItemsRepeater.ItemTemplate>
          </ItemsRepeater>
        </Panel>
      </Grid>
    </Border>
  </Panel>
</UserControl>
